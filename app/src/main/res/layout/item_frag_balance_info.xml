<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_goos_name"
        android:layout_width="@dimen/dp_280"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_16"
        android:singleLine="true"
        android:text="购买XXXXXX商品"
        android:textColor="@color/text_black_3"
        android:textSize="@dimen/dp_14" />


    <TextView
        android:id="@+id/tv_goos_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_goos_name"
        android:layout_marginBottom="@dimen/dp_16"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_6"
        android:text="2018-10-21 15:32:35"
        android:textColor="#6D6F73"
        android:textSize="@dimen/dp_14" />

    <TextView
        android:id="@+id/tv_goos_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/dp_12"
        android:text="-100"
        android:textColor="#D3AD7F"
        android:textSize="@dimen/dp_16" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:layout_below="@id/tv_goos_time"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_10"
        android:background="#E5E5E5" />
</RelativeLayout>