<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_84"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_num"
        android:layout_width="@dimen/dp_40"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/text_gray_income"
        android:textSize="@dimen/dp_16" />

    <ImageView
        android:id="@+id/iv_bg"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_toEndOf="@id/tv_num"
        android:background="@mipmap/img_sybgold" />

    <ImageView
        android:id="@+id/iv_header"
        android:layout_width="@dimen/dp_48"
        android:layout_height="@dimen/dp_48"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_11"
        android:layout_toEndOf="@id/tv_num"
        android:background="@mipmap/header_default" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_toEndOf="@id/iv_header"
        android:text="兵来将挡"
        android:textColor="@color/text_black_3"
        android:textSize="@dimen/dp_14" />

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_6"
        android:layout_toEndOf="@id/iv_header"
        android:background="@drawable/shape_gray_bg_desc_stroke"
        android:paddingEnd="@dimen/dp_8"
        android:paddingStart="@dimen/dp_8"
        android:text="店主"
        android:textColor="@color/text_gray_desc"
        android:textSize="@dimen/dp_12" />


    <TextView
        android:id="@+id/tv_income"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/dp_16"
        android:text="￥256.69"
        android:textColor="@color/text_income_nor"
        android:textSize="@dimen/dp_14" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_10"
        android:background="@color/view_line_bg" />
</RelativeLayout>