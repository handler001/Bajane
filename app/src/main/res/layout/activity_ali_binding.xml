<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_act_gray"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <include layout="@layout/common_title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/dp_10">

            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_36"
                android:background="@color/transparent"
                android:drawableLeft="@mipmap/icon_jiaccount"
                android:drawablePadding="@dimen/dp_10"
                android:hint="请输入支付宝用户名称"
                android:paddingLeft="@dimen/dp_10"
                android:singleLine="true"
                android:textColor="@color/text_black_3"
                android:textSize="@dimen/dp_14" />

            <ImageView
                android:id="@+id/iv_name"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@mipmap/btn_cuohao" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:background="#ECECEC" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/dp_10">

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_36"
                android:background="@color/transparent"
                android:drawableLeft="@mipmap/icon_shouji"
                android:drawablePadding="@dimen/dp_14"
                android:hint="请输入支付宝账号"
                android:paddingLeft="@dimen/dp_14"
                android:singleLine="true"
                android:textColor="@color/text_black_3"
                android:textSize="@dimen/dp_14" />

            <ImageView
                android:id="@+id/iv_phone"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@mipmap/btn_cuohao" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/et_name"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:background="#ECECEC" />

        <RelativeLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/dp_10">

            <EditText
                android:id="@+id/et_pwd"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_36"
                android:background="@color/transparent"
                android:drawableLeft="@mipmap/icon_yzma_alipay"
                android:drawablePadding="@dimen/dp_10"
                android:hint="请输入验证码"
                android:inputType="number"
                android:maxLength="6"
                android:paddingLeft="@dimen/dp_12"
                android:singleLine="true"
                android:textColor="@color/text_black_3"
                android:textSize="@dimen/dp_14" />

            <TextView
                android:id="@+id/tv_getsms"
                android:layout_width="@dimen/dp_84"
                android:layout_height="@dimen/dp_36"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="点击获取"
                android:textColor="@color/text_black_3"
                android:textSize="@dimen/dp_12" />

            <View
                android:layout_width="@dimen/dp_0.5"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/tv_getsms"
                android:background="#DEDEDE" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/et_name"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:background="#ECECEC" />


        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/shape_orange_bg_gradient_circle"
            android:gravity="center"
            android:text="立即修改"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_16" />
    </LinearLayout>
</LinearLayout>