<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/dp_12"
    android:layout_marginStart="@dimen/dp_12"
    android:layout_marginTop="@dimen/dp_10"
    android:background="@drawable/shape_white_bg_circle"
    android:elevation="@dimen/dp_2"
    android:orientation="vertical"
    android:paddingEnd="@dimen/dp_10"
    android:paddingStart="@dimen/dp_10"
    android:paddingTop="@dimen/dp_12">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="你有新的粉丝"
            android:textColor="@color/text_black_3"
            android:textSize="@dimen/dp_14"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp_6"
            android:text="未读"
            android:textColor="@color/red_finish"
            android:textSize="@dimen/dp_12"
            android:visibility="gone" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_4"
        android:text="3小时"
        android:textColor="#757575"
        android:textSize="@dimen/dp_12" />

    <ImageView
        android:id="@+id/iv_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@mipmap/icon_default_bg"
        android:scaleType="centerCrop"
        app:layout_heightPercent="36%w" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:background="@color/line_bg_gray" />

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_36"
        android:layout_margin="@dimen/dp_2"
        android:drawableEnd="@mipmap/enter_gray"
        android:gravity="center_vertical"
        android:text="阅读全文"
        android:textColor="@color/text_black_3"
        android:textSize="@dimen/dp_14"
        android:textStyle="bold" />
</com.zhy.android.percent.support.PercentLinearLayout>