<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_act_gray"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/common_title_bar" />

    <com.zhengsr.viewpagerlib.indicator.TabIndicator
        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_gravity="center_horizontal"
        android:background="@color/bg_title_gray"
        app:tab_color="@color/tpc_money_sel"
        app:tab_height="@dimen/dp_1"
        app:tab_show="true"
        app:tab_text_change_color="@color/tpc_money_sel"
        app:tab_text_default_color="@color/tab_text_nor"
        app:tab_text_type="normaltext"
        app:tab_textsize="@dimen/dp_14"
        app:tab_width="@dimen/dp_40"
        app:tap_type="rect"
        app:visiabel_size="4" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white" />

</LinearLayout>