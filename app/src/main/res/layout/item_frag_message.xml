<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_6"
    android:background="@color/white"
    android:paddingEnd="@dimen/dp_10"
    android:paddingStart="@dimen/dp_10"
    android:paddingTop="@dimen/dp_12">


    <ImageView
        android:id="@+id/iv_pic"
        android:layout_width="@dimen/dp_48"
        android:layout_height="@dimen/dp_48"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_dai_num"
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16"
        android:layout_alignEnd="@id/iv_pic"
        android:background="@drawable/shape_red_circle"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_10"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_6"
        android:layout_marginTop="@dimen/dp_2"
        android:layout_toEndOf="@id/iv_pic"
        android:text="贝佳尼"
        android:textColor="@color/text_black_3"
        android:textSize="@dimen/dp_14" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_pic"
        android:layout_marginBottom="@dimen/dp_2"
        android:layout_marginStart="@dimen/dp_6"
        android:layout_toEndOf="@id/iv_pic"
        android:singleLine="true"
        android:text="3折优惠，买一返10活动等等这种得。"
        android:textColor="#808080"
        android:textSize="@dimen/dp_12" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/dp_2"
        android:text="08.22"
        android:textColor="#AEAEAE"
        android:textSize="@dimen/dp_14" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:layout_below="@id/iv_pic"
        android:layout_marginTop="@dimen/dp_12"
        android:background="#EDEDED" />

</RelativeLayout>