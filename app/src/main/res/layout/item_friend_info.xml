<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_header"
        android:layout_width="@dimen/dp_64"
        android:layout_height="@dimen/dp_64"
        android:layout_margin="@dimen/dp_10"
        android:background="@mipmap/header_default" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_header"
        android:layout_marginTop="@dimen/dp_6"
        android:layout_toEndOf="@id/iv_header"
        android:text="兵来将挡"
        android:textColor="@color/text_black_3"
        android:textSize="@dimen/dp_14" />

    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:layout_marginTop="@dimen/dp_2"
        android:layout_toEndOf="@id/iv_header"
        android:text="131****5678"
        android:textColor="#ACAEB3"
        android:textSize="@dimen/dp_12" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/iv_header"
        android:layout_marginEnd="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_6"
        android:text="2018-11-18"
        android:textColor="@color/text_black_3"
        android:textSize="@dimen/dp_14" />

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/tv_time"
        android:layout_marginEnd="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_2"
        android:text="普通用户"
        android:textColor="@color/text_black_3"
        android:textSize="@dimen/dp_12" />

    <TextView
        android:id="@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/tv_phone"
        android:layout_below="@id/tv_phone"
        android:layout_marginEnd="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_4"
        android:text="贡献金额: ￥0"
        android:textColor="@color/green_bg"
        android:textSize="@dimen/dp_12" />

    <TextView
        android:id="@+id/tv_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/tv_phone"
        android:layout_marginEnd="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_4"
        android:text="直推"
        android:textColor="@color/text_black_3"
        android:textSize="@dimen/dp_12" />


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:layout_below="@id/iv_header"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_6"
        android:background="#DFDFDF" />
</RelativeLayout>