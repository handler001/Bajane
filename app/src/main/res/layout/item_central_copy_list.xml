<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_4"
    android:background="@color/white"
    android:padding="@dimen/dp_12">

    <ImageView
        android:id="@+id/iv_header"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:background="@mipmap/header_default"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_6"
        android:layout_marginTop="@dimen/dp_2"
        android:layout_toEndOf="@id/iv_header"
        android:text="贝加尼"
        android:textColor="@color/text_black_3"
        android:textSize="@dimen/dp_12" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_header"
        android:layout_marginBottom="@dimen/dp_2"
        android:layout_marginStart="@dimen/dp_6"
        android:layout_toEndOf="@id/iv_header"
        android:text="4小时"
        android:textColor="@color/text_black_9"
        android:textSize="@dimen/dp_12" />

    <TextView
        android:id="@+id/tv_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/dp_8"
        android:background="@drawable/shape_orange_bg_post_stroke"
        android:drawablePadding="@dimen/dp_6"
        android:drawableStart="@mipmap/icon_share_orange"
        android:paddingBottom="@dimen/dp_2"
        android:paddingEnd="@dimen/dp_8"
        android:paddingStart="@dimen/dp_8"
        android:paddingTop="@dimen/dp_2"
        android:text="200"
        android:textColor="@color/text_total_money"
        android:textSize="@dimen/dp_12" />

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_header"
        android:layout_marginTop="@dimen/dp_8"
        android:text="测试"
        android:textColor="@color/text_black_6"
        android:textSize="@dimen/dp_14" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rlv_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_desc"
        android:layout_marginTop="@dimen/dp_6"
        android:scrollbars="none"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_desc"
        android:layout_marginTop="@dimen/dp_6"
        android:scaleType="centerCrop" />

</RelativeLayout>