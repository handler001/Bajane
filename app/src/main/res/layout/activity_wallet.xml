<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_act_gray"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:background="@color/text_total_money">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/dp_60"
            android:layout_height="match_parent"
            android:padding="@dimen/dp_14"
            android:src="@drawable/back_white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我的钱包"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_16" />

        <TextView
            android:id="@+id/tv_balance"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:paddingEnd="@dimen/dp_12"
            android:text="余额明细"
            android:textColor="#FFE8E0"
            android:textSize="@dimen/dp_14" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_120"
        android:background="@color/text_total_money"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp_16">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_24"
            android:text="账户余额（元）"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_14" />

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_30"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_balance_exchange"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:drawableEnd="@mipmap/enter_gray"
            android:drawablePadding="@dimen/dp_12"
            android:drawableStart="@mipmap/icon_fx_zaccount"
            android:gravity="center_vertical"
            android:paddingEnd="@dimen/dp_10"
            android:paddingStart="@dimen/dp_12"
            android:text="余额转账"
            android:textColor="#4B4C4F"
            android:textSize="@dimen/dp_16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_10"
            android:background="#EFEFEF" />

        <TextView
            android:id="@+id/tv_bank"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:drawableEnd="@mipmap/enter_gray"
            android:drawablePadding="@dimen/dp_12"
            android:drawableStart="@mipmap/icon_fxtxbankcd"
            android:gravity="center_vertical"
            android:paddingEnd="@dimen/dp_10"
            android:paddingStart="@dimen/dp_12"
            android:text="提现到银行卡"
            android:textColor="#4B4C4F"
            android:textSize="@dimen/dp_16" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_10"
            android:background="#EFEFEF" />

        <TextView
            android:id="@+id/tv_ali"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:drawableEnd="@mipmap/enter_gray"
            android:drawablePadding="@dimen/dp_12"
            android:drawableStart="@mipmap/icon_fxtxalipay"
            android:gravity="center_vertical"
            android:paddingEnd="@dimen/dp_10"
            android:paddingStart="@dimen/dp_12"
            android:text="提现到支付宝"
            android:textColor="#4B4C4F"
            android:textSize="@dimen/dp_16" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_detail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        android:drawableEnd="@mipmap/enter_gray"
        android:drawablePadding="@dimen/dp_12"
        android:drawableStart="@mipmap/icon_fxtxmx"
        android:gravity="center_vertical"
        android:paddingEnd="@dimen/dp_10"
        android:paddingStart="@dimen/dp_12"
        android:text="提现明细"
        android:textColor="#4B4C4F"
        android:textSize="@dimen/dp_16" />
</LinearLayout>