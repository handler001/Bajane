<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_10"
        android:src="@mipmap/img_title_daily" />

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_rate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@mipmap/img_paihang_daily"
            app:layout_heightPercent="40%w" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/line_bg_gray" />

        <ImageView
            android:id="@+id/iv_big_ticket"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@mipmap/img_bigdiscount_daily"
            app:layout_heightPercent="40%w" />


    </com.zhy.android.percent.support.PercentLinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_bg_gray" />

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_new_goods"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@mipmap/img_newgoods_daily"
            app:layout_heightPercent="40%w" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/line_bg_gray" />

        <ImageView
            android:id="@+id/iv_good_day"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@mipmap/img_selected_daily"
            app:layout_heightPercent="40%w" />


    </com.zhy.android.percent.support.PercentLinearLayout>

</LinearLayout>