<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_148"
        android:background="@mipmap/img_gradientbackground"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电子兑换卷"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_16" />

            <TextView
                android:id="@+id/tv_ticket_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="1000个"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_18" />

        </LinearLayout>

        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="@dimen/dp_56"
            android:background="#F3F3F3" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电子资产包"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_16" />

            <TextView
                android:id="@+id/tv_money_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="5648"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_18" />

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp_8"
            android:drawableTop="@mipmap/icon_turnout_chu"
            android:gravity="center"
            android:padding="@dimen/dp_12"
            android:text="转出"
            android:textColor="@color/text_black_6"
            android:textSize="@dimen/dp_16" />

        <TextView
            android:id="@+id/tv_exchane"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp_8"
            android:drawableTop="@mipmap/icon_exchange_huan"
            android:gravity="center"
            android:padding="@dimen/dp_12"
            android:text="兑换"
            android:textColor="@color/text_black_6"
            android:textSize="@dimen/dp_16" />


        <TextView
            android:id="@+id/tv_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp_8"
            android:drawableTop="@mipmap/icon_shopping_gouwu"
            android:gravity="center"
            android:padding="@dimen/dp_12"
            android:text="购物"
            android:textColor="@color/text_black_6"
            android:textSize="@dimen/dp_16" />


        <TextView
            android:id="@+id/tv_market"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp_8"
            android:drawableTop="@mipmap/icon_market_shichang"
            android:gravity="center"
            android:padding="@dimen/dp_12"
            android:text="市场"
            android:textColor="@color/text_black_6"
            android:textSize="@dimen/dp_16" />

    </LinearLayout>

</LinearLayout>