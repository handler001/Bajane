<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_act_gray"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:background="@color/title_bar_bg"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dp_14"
            android:paddingEnd="@dimen/dp_6"
            android:paddingStart="@dimen/dp_6"
            android:paddingTop="@dimen/dp_14"
            android:src="@drawable/back_black" />

        <EditText
            android:id="@+id/et_search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp_6"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_weight="1"
            android:background="@drawable/shape_gray_return_bg"
            android:drawablePadding="@dimen/dp_10"
            android:drawableStart="@mipmap/icon_fy_search"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/dp_10"
            android:hint="输入商家名称"
            android:textColor="#979797"
            android:textSize="@dimen/dp_14" />

        <TextView
            android:id="@+id/tv_search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingEnd="@dimen/dp_10"
            android:paddingStart="@dimen/dp_10"
            android:text="搜索"
            android:textColor="@color/text_black_3"
            android:textSize="@dimen/dp_14" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:background="@color/title_bar_bg"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_all"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全部分类"
                android:textColor="@color/text_black_3"
                android:textSize="@dimen/dp_14" />

            <ImageView
                android:id="@+id/iv_all"
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_8"
                android:layout_marginStart="@dimen/dp_6"
                android:background="@mipmap/icon_downr_flei"
                android:scaleType="centerCrop" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_address"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="附近"
                android:textColor="@color/text_black_3"
                android:textSize="@dimen/dp_14" />

            <ImageView
                android:id="@+id/iv_address"
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_8"
                android:layout_marginStart="@dimen/dp_6"
                android:background="@mipmap/icon_downr_flei"
                android:scaleType="centerCrop" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_px"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="智能排序"
                android:textColor="@color/text_black_3"
                android:textSize="@dimen/dp_14" />

            <ImageView
                android:id="@+id/iv_px"
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_8"
                android:layout_marginStart="@dimen/dp_6"
                android:background="@mipmap/icon_downr_flei"
                android:scaleType="centerCrop" />


        </LinearLayout>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rlv_shop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" />

</LinearLayout>