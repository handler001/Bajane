<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_12"
        android:background="@mipmap/icon_default_bg"
        android:scaleType="centerCrop"
        app:layout_heightPercent="16%w"
        app:layout_widthPercent="24%w" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_toEndOf="@id/iv_pic"
        android:singleLine="true"
        android:text="燃烧脂肪，健康减肥。"
        android:textColor="@color/text_black_pro"
        app:layout_marginTopPercent="5.6%w"
        app:layout_textSizePercent="4.2%w" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:layout_toEndOf="@id/iv_pic"
        android:drawablePadding="@dimen/dp_6"
        android:drawableStart="@mipmap/btn_articletime"
        android:text="2018-08-16"
        android:textColor="@color/text_time_pro"
        app:layout_marginTopPercent="2%w"
        app:layout_textSizePercent="3.6%w" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:layout_below="@id/iv_pic"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_10"
        android:background="@color/line_gray_pro" />

</com.zhy.android.percent.support.PercentRelativeLayout>