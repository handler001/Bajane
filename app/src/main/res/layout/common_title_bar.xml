<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_48"
    android:background="@color/title_bar_bg">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_14"
        android:paddingEnd="@dimen/dp_10"
        android:paddingStart="@dimen/dp_10"
        android:paddingTop="@dimen/dp_14"
        android:src="@drawable/back_black" />

    <ImageView
        android:id="@+id/iv_message"
        android:layout_width="@dimen/dp_60"
        android:layout_height="match_parent"
        android:padding="@dimen/dp_10"
        android:src="@drawable/btn_navbar_news"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/text_black_3"
        android:textSize="@dimen/dp_16" />


    <ImageView
        android:id="@+id/iv_car"
        android:layout_width="@dimen/dp_60"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:padding="@dimen/dp_10"
        android:src="@drawable/btn_navbar_gwche"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_num"
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/dp_6"
        android:background="@drawable/shape_red_circle"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_10"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_edit"
        android:layout_width="@dimen/dp_56"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:padding="@dimen/dp_12"
        android:src="@mipmap/btn_orderinput"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_share"
        android:layout_width="@dimen/dp_56"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:padding="@dimen/dp_12"
        android:src="@mipmap/icon_share_title"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_code"
        android:layout_width="@dimen/dp_48"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/iv_edit"
        android:padding="@dimen/dp_12"
        android:src="@mipmap/btn_orderqcode"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_save"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:paddingEnd="@dimen/dp_12"
        android:paddingStart="@dimen/dp_12"
        android:text="保存"
        android:textColor="#FF551A"
        android:textSize="@dimen/dp_14"
        android:visibility="gone" />

</RelativeLayout>