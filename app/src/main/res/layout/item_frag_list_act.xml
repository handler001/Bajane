<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_4"
    android:layout_marginEnd="@dimen/dp_6"
    android:layout_marginStart="@dimen/dp_6"
    android:layout_marginTop="@dimen/dp_6"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/dp_4"
    app:cardElevation="@dimen/dp_2">

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_12"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_16"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="买1盒有机会得6860元"
            android:textColor="@color/text_black_3"
            android:textSize="@dimen/dp_16"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_6"
            android:drawablePadding="@dimen/dp_6"
            android:drawableStart="@drawable/view_orange_line"
            android:text="奖品有限先到先得"
            android:textColor="#5E5E5E"
            android:textSize="@dimen/dp_12" />

        <ImageView
            android:id="@+id/iv_pic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_6"
            android:background="@mipmap/icon_default_bg"
            android:scaleType="centerCrop"
            app:layout_heightPercent="40%w" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:layout_marginTop="@dimen/dp_10"
            android:background="#E7E9EC" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:drawableEnd="@mipmap/enter_gray"
            android:gravity="center_vertical"
            android:text="查看详情"
            android:textColor="#9D9D9D"
            android:textSize="@dimen/dp_12" />

    </com.zhy.android.percent.support.PercentLinearLayout>

</android.support.v7.widget.CardView>