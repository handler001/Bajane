<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_act_gray"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:fitsSystemWindows="true">

    <include
        layout="@layout/common_title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48" />

    <RelativeLayout
        android:id="@+id/rl_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_84"
        android:layout_marginTop="@dimen/dp_60"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_16"
            android:text="对方账户"
            android:textColor="@color/text_black_3"
            android:textSize="@dimen/dp_16" />

        <EditText
            android:id="@+id/et_num"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_toEndOf="@id/tv_num"
            android:background="@color/transparent"
            android:gravity="center_vertical"
            android:hint="请输入手机号码/UID"
            android:inputType="number"
            android:paddingEnd="@dimen/dp_10"
            android:paddingStart="@dimen/dp_20"
            android:singleLine="true"
            android:textColor="@color/text_black_3"
            android:textSize="@dimen/dp_16" />

    </RelativeLayout>

    <Button
        android:id="@+id/bt_next"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_below="@id/rl_phone"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/shape_orange_bg_gradient"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_16" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@mipmap/bg_trans_out_text"
        app:layout_marginBottomPercent="10%h" />

</com.zhy.android.percent.support.PercentRelativeLayout>