<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_4"
    android:background="@color/white"
    android:elevation="@dimen/dp_1"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dp_4">

    <ImageView
        android:id="@+id/iv_pic"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@mipmap/icon_default_bg"
        android:scaleType="centerCrop"
        app:layout_heightPercent="100%w" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_pic"
        android:layout_marginLeft="@dimen/dp_4"
        android:layout_marginRight="@dimen/dp_4"
        android:layout_marginTop="@dimen/dp_4"
        android:maxLines="2"
        android:text="贝佳尼小分子肽 "
        android:textColor="@color/text_black_0"
        app:layout_heightPercent="18%w"
        app:layout_textSizePercent="7.2%w" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_4"
        android:text="￥686"
        android:textColor="@color/title_bg_red"
        app:layout_textSizePercent="8.4%w" />
</com.zhy.android.percent.support.PercentLinearLayout>