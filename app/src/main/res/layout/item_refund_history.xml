<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_10"
    android:background="@color/white"
    android:padding="@dimen/dp_10">

    <TextView
        android:id="@+id/tv_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="卖家同意退款申请，退款完成。"
        android:textColor="@color/text_black_3"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_state"
        android:layout_alignParentEnd="true"
        android:text="2017-12-12 12:12:13"
        android:textColor="@color/text_black_3"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_state"
        android:layout_marginTop="@dimen/dp_10"
        android:text="退回地址：河南省郑州市金水区豫茶大厦1201，张三收，电话：13112345678"
        android:textColor="#50566A"
        android:textSize="@dimen/sp_12" />

    <com.zhy.android.percent.support.PercentLinearLayout
        android:id="@+id/pll_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_content"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_pic_one"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@mipmap/icon_default_bg"
            app:layout_heightPercent="23%w" />

        <ImageView
            android:id="@+id/iv_pic_two"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@mipmap/icon_default_bg"
            app:layout_heightPercent="23%w"
            app:layout_marginLeftPercent="2.4%w"
            app:layout_marginRightPercent="2.4%w" />

        <ImageView
            android:id="@+id/iv_pic_three"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@mipmap/icon_default_bg"
            app:layout_heightPercent="23%w"
            app:layout_marginRightPercent="2.4%w" />

        <ImageView
            android:id="@+id/iv_pic_four"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@mipmap/icon_default_bg"
            android:visibility="invisible"
            app:layout_heightPercent="23%w" />
    </com.zhy.android.percent.support.PercentLinearLayout>

</RelativeLayout>