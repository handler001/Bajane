<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_10"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_36"
        android:layout_marginStart="@dimen/dp_10"
        android:gravity="center"
        android:text="拼多多"
        android:textColor="@color/text_black_6"
        app:layout_textSizePercent="3.6%w" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_36"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/dp_10"
        android:gravity="center"
        android:text="下单时间 2018-09-11   12:45"
        android:textColor="@color/text_black_6"
        app:layout_textSizePercent="3.6%w" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:layout_below="@id/tv_type"
        android:background="@color/bg_act_gray" />

    <ImageView
        android:id="@+id/iv_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/line"
        android:layout_margin="@dimen/dp_10"
        android:background="@mipmap/icon_default_bg"
        app:layout_heightPercent="20%w"
        app:layout_widthPercent="20%w" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_pic"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_2"
        android:layout_toEndOf="@id/iv_pic"
        android:singleLine="true"
        android:text="订单号: 165467498789764164646"
        android:textColor="@color/text_black_3"
        app:layout_textSizePercent="4%w" />

    <TextView
        android:id="@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:layout_toEndOf="@id/iv_pic"
        android:text="付款7.8元"
        android:textColor="@color/text_black_6"
        app:layout_marginTopPercent="2%w"
        app:layout_textSizePercent="3.6%w" />

    <TextView
        android:id="@+id/tv_money_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_pic"
        android:layout_marginBottom="@dimen/dp_2"
        android:layout_toEndOf="@id/iv_pic"
        android:text="返还7.8元"
        android:textColor="@color/text_black_6"
        app:layout_textSizePercent="3.6%w" />

    <TextView
        android:id="@+id/tv_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_money_back"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/dp_10"
        android:text="订单已失效"
        android:textColor="@color/orange"
        app:layout_textSizePercent="3.6%w" />

</com.zhy.android.percent.support.PercentRelativeLayout>