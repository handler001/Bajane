<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@mipmap/icon_default_bg"
        android:scaleType="centerCrop"
        app:layout_heightPercent="24%w"
        app:layout_widthPercent="32%w" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_pic"
        android:layout_toRightOf="@id/iv_pic"
        android:singleLine="true"
        android:text="数码家电"
        android:textColor="@color/text_black_3"
        app:layout_textSizePercent="4%w" />

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:layout_toRightOf="@id/iv_pic"
        android:singleLine="true"
        android:text="日用百货"
        android:textColor="#828282"
        app:layout_marginTopPercent="2%w"
        app:layout_textSizePercent="3.6%w" />

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_pic"
        android:layout_toRightOf="@id/iv_pic"
        android:drawablePadding="@dimen/dp_6"
        android:drawableStart="@mipmap/btn_dw_emptygry"
        android:singleLine="true"
        android:text="河南省郑州市金水区-某某某路"
        android:textColor="#A8A8A8"
        app:layout_textSizePercent="3.2%w" />

    <TextView
        android:id="@+id/tv_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_type"
        android:layout_toRightOf="@id/iv_pic"
        android:background="@drawable/shape_orange_bg_post"
        android:paddingEnd="@dimen/dp_6"
        android:paddingStart="@dimen/dp_6"
        android:text="WIFI"
        android:textColor="#FB7C2F"
        app:layout_marginTopPercent="2%w"
        app:layout_textSizePercent="3%w" />


    <TextView
        android:id="@+id/tv_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_type"
        android:layout_marginStart="@dimen/dp_6"
        android:layout_toRightOf="@id/tv_one"
        android:background="@drawable/shape_orange_bg_post"
        android:paddingEnd="@dimen/dp_6"
        android:paddingStart="@dimen/dp_6"
        android:text="积分"
        android:textColor="#FB7C2F"
        app:layout_marginTopPercent="2%w"
        app:layout_textSizePercent="3%w" />

    <TextView
        android:id="@+id/tv_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_type"
        android:layout_marginStart="@dimen/dp_6"
        android:layout_toRightOf="@id/tv_two"
        android:background="@drawable/shape_orange_bg_post"
        android:paddingEnd="@dimen/dp_6"
        android:paddingStart="@dimen/dp_6"
        android:text="停车场"
        android:textColor="#FB7C2F"
        app:layout_marginTopPercent="2%w"
        app:layout_textSizePercent="3%w" />

    <TextView
        android:id="@+id/tv_four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_type"
        android:layout_marginStart="@dimen/dp_6"
        android:layout_toRightOf="@id/tv_three"
        android:background="@drawable/shape_orange_bg_post"
        android:paddingEnd="@dimen/dp_6"
        android:paddingStart="@dimen/dp_6"
        android:text="停车场"
        android:textColor="#FB7C2F"
        app:layout_marginTopPercent="2%w"
        app:layout_textSizePercent="3%w" />

    <TextView
        android:id="@+id/tv_five"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_type"
        android:layout_marginStart="@dimen/dp_6"
        android:layout_toRightOf="@id/tv_four"
        android:background="@drawable/shape_orange_bg_post"
        android:paddingEnd="@dimen/dp_6"
        android:paddingStart="@dimen/dp_6"
        android:text="停车场"
        android:textColor="#FB7C2F"
        app:layout_marginTopPercent="2%w"
        app:layout_textSizePercent="3%w" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:layout_below="@id/iv_pic"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_10"
        android:background="#DFDFDF" />
</com.zhy.android.percent.support.PercentRelativeLayout>