<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_10"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:background="@mipmap/ic_launcher_rd"
        app:layout_heightPercent="16%w"
        app:layout_marginBottomPercent="6%w"
        app:layout_marginTopPercent="6%w"
        app:layout_widthPercent="16%w" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_pic"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_toEndOf="@id/iv_pic"
        android:text="鑫来"
        android:textColor="@color/text_black_3"
        app:layout_textSizePercent="4.2%w" />

    <TextView
        android:id="@+id/tv_pay_method"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_pic"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_toEndOf="@id/iv_pic"
        android:text="支付方式：中国工商银行"
        android:textColor="@color/text_black_9"
        app:layout_textSizePercent="3.4%w" />

    <TextView
        android:id="@+id/tv_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/dp_16"
        android:text="交易金额500.00RMB"
        android:textColor="@color/text_black_3"
        app:layout_marginTopPercent="4.8%w"
        app:layout_textSizePercent="4%w" />

    <TextView
        android:id="@+id/tv_pay_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/tv_pay"
        android:layout_marginEnd="@dimen/dp_16"
        android:text="实付金额：425.00RMB"
        android:textColor="@color/text_black_9"
        app:layout_marginTopPercent="1%w"
        app:layout_textSizePercent="3.4%w" />

    <TextView
        android:id="@+id/tv_bargain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_pic"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/dp_16"
        android:background="@drawable/shape_orange_bg"
        android:gravity="center"
        android:text="买入"
        android:textColor="@color/white"
        app:layout_heightPercent="5%w"
        app:layout_textSizePercent="3.2%w"
        app:layout_widthPercent="10%w" />

</com.zhy.android.percent.support.PercentRelativeLayout>